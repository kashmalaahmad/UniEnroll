<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prerequisites - Course Registration System</title>
    <link href="/css/admin.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/student/dashboard">
                                <i class="fas fa-home"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/student/courses">
                                <i class="fas fa-book"></i> Courses
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/student/schedule">
                                <i class="fas fa-calendar"></i> Schedule
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-white" href="/student/prerequisites">
                                <i class="fas fa-list"></i> Prerequisites
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Course Prerequisites</h1>
                </div>

                <div class="prerequisites-container">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Your Prerequisites Status</h5>
                                    <div class="prerequisite-tree">
                                        <% if (student && student.prerequisites) { %>
                                            <% student.prerequisites.forEach(prereq => { %>
                                                <div class="prerequisite-item">
                                                    <div class="prerequisite-status <%= prereq.completed ? 'completed' : 'pending' %>">
                                                        <i class="fas <%= prereq.completed ? 'fa-check' : 'fa-clock' %>"></i>
                                                    </div>
                                                    <div class="prerequisite-info">
                                                        <h6><%= prereq.courseName %></h6>
                                                        <p class="mb-0"><%= prereq.description %></p>
                                                    </div>
                                                </div>
                                            <% }); %>
                                        <% } else { %>
                                            <p class="text-muted">No prerequisites found.</p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
</html> 